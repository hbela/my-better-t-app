{
  "info": {
    "_postman_id": "medisched-api-collection",
    "name": "Medisched API",
    "description": "Complete API collection for Medisched healthcare scheduling platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "ownerToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "organizationId",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "departmentId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "0. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": "http://localhost:3000/health",
        "description": "Check if the server is running"
      }
    },
    {
      "name": "Admin - User & Organization Management",
      "item": [
        {
          "name": "1. Create User with Temp Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Owner\",\n  \"email\": \"owner@test.com\",\n  \"role\": \"USER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "users"]
            },
            "description": "Admin creates a user with temporary password. Email sent to user."
          }
        },
        {
          "name": "2. Create Organization",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Hospital\",\n  \"slug\": \"test-hospital\",\n  \"ownerId\": \"{{userId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/organizations/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "organizations", "create"]
            },
            "description": "Admin creates organization. Organization is disabled by default."
          }
        },
        {
          "name": "3. Toggle Organization Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/organizations/{{organizationId}}/toggle",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "organizations", "{{organizationId}}", "toggle"]
            },
            "description": "Admin manually enables or disables an organization"
          }
        },
        {
          "name": "Get Admin Overview",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/overview",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "overview"]
            },
            "description": "Get platform-wide statistics and all organization data"
          }
        },
        {
          "name": "List All Organizations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/organizations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "organizations"]
            },
            "description": "List all organizations with members and departments"
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Check Password Change Needed",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{ownerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/check-password-change",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "check-password-change"]
            },
            "description": "Check if user needs to change password (for temp passwords)"
          }
        },
        {
          "name": "Update Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{ownerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"newPassword\": \"newSecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/update-password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "update-password"]
            },
            "description": "Update user password and clear needsPasswordChange flag"
          }
        }
      ]
    },
    {
      "name": "Subscription",
      "item": [
        {
          "name": "Get Subscription Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{ownerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/organizations/{{organizationId}}/subscription",
              "host": ["{{baseUrl}}"],
              "path": ["api", "organizations", "{{organizationId}}", "subscription"]
            },
            "description": "Check if organization is enabled and subscription status"
          }
        },
        {
          "name": "Create Checkout Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{ownerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"organizationId\": \"{{organizationId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/subscriptions/create-checkout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subscriptions", "create-checkout"]
            },
            "description": "Create Polar checkout session for subscription"
          }
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Simulate Polar Webhook - Enable Org",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"subscription.created\",\n  \"data\": {\n    \"id\": \"sub_test123\",\n    \"customer\": {\n      \"id\": \"cust_test456\",\n      \"email\": \"owner@test.com\",\n      \"name\": \"Test Owner\"\n    },\n    \"metadata\": {\n      \"organizationId\": \"{{organizationId}}\",\n      \"organizationName\": \"Test Hospital\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/polar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhooks", "polar"]
            },
            "description": "Simulate Polar webhook to enable organization after payment"
          }
        }
      ]
    },
    {
      "name": "Departments",
      "item": [
        {
          "name": "Create Department",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{ownerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Cardiology\",\n  \"organizationId\": \"{{organizationId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/departments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "departments"]
            },
            "description": "Create department (requires enabled organization)"
          }
        },
        {
          "name": "List Departments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "better-auth.session_token={{ownerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/departments?organizationId={{organizationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "departments"],
              "query": [
                {
                  "key": "organizationId",
                  "value": "{{organizationId}}"
                }
              ]
            },
            "description": "List all departments in organization"
          }
        }
      ]
    },
    {
      "name": "Public",
      "item": [
        {
          "name": "List Organizations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/organizations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "organizations"]
            },
            "description": "Public endpoint - list all organizations"
          }
        }
      ]
    }
  ]
}
