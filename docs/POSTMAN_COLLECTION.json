            "url": {
              "raw": "{{baseUrl}}/api/events?organizationId={{organizationId}}&available=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "events"],
              "query": [
                {
                  "key": "organizationId",
                  "value": "{{organizationId}}"
                },
                {
                  "key": "available",
                  "value": "true"
                }
              ]
            }
          }
        }
