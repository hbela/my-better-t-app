              "raw": "{{baseUrl}}/api/departments?organizationId={{organizationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "departments"],
              "query": [
                {
                  "key": "organizationId",
                  "value": "{{organizationId}}"
                }
              ]
            }
          }
        }
      ]
    },
